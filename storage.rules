rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user owns the file
    function isOwner(uid) {
      return isAuthenticated() && request.auth.uid == uid;
    }

    // User-specific uploads - only owner can read/write
    match /users/{uid}/{allPaths=**} {
      allow read, write: if isOwner(uid);
    }

    // Public content (read-only for authenticated users, write via Functions only)
    match /public/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if false; // Only via Cloud Functions
    }

    // Temporary uploads (for processing) - user can write, Functions can read/delete
    match /temp/{uid}/{allPaths=**} {
      allow write: if isOwner(uid);
      allow read, delete: if false; // Only Cloud Functions can read/delete temp files
    }

    // Deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
